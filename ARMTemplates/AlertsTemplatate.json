{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "projectAppName": {
            "type": "string",
            "metadata": {
                "description": "Base name for alerts objects (name of the webapp for example)"
            }
        },

        "projectAppShortName": {
            "type": "string",
            "metadata": {
                "description": "Short base name for notification group (6 symbols)"
            }
        },

        "automationLogAnalyticsName": {
            "type": "string",
            "metadata": {
                "description": "Name of Log Analytics Workspace"
            }
        },

        "webAppName": {
            "type": "string",
            "defaultValue": "[parameters('projectAppName')]",
            "metadata": {
                "description": "Name of the webapp in the log messages (default == projectAppName)"
            }
        }
    },
    "variables": {
        "actionGroupName": "[concat(parameters('projectAppName'),'-Notify-Group')]",
        "actionGroupShortName": "[concat(parameters('projectAppShortName'),'Notify')]",
        "logAnalyticsResource": "[resourceId('microsoft.operationalinsights/workspaces', parameters('automationLogAnalyticsName'))]",
        "actionGroupResource": "[resourceId('microsoft.insights/actionGroups', variables('actionGroupName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "[variables('actionGroupName')]",
            "location": "Global",
            "properties": {
                "groupShortName": "[variables('actionGroupShortName')]",
                "enabled": true,
                "emailReceivers": [],
                "smsReceivers": [],
                "webhookReceivers": [],
                "itsmReceivers": [],
                "azureAppPushReceivers": [],
                "automationRunbookReceivers": [],
                "voiceReceivers": [],
                "logicAppReceivers": [],
                "azureFunctionReceivers": []
            }
        },
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",  
            "name": "[concat(parameters('projectAppName'),'-certificate-require-update')]",
            "location": "westeurope",
            "dependsOn": [
                "[variables('actionGroupResource')]"
            ],
            "properties": {
                "description": "Certificate for WebApp expired in less than 20 days (daily checks)",
                "enabled": "true",
                "source": {
                    "query": "[concat( 'AzureDiagnostics | where ResultDescription contains \"Test-WebAppCertificate: SSL certificate needs to be updated. WebApp: ', parameters('webAppName'), '\"')]",
                    "authorizedResources": [],
                    "dataSourceId": "[variables('logAnalyticsResource')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 180,
                    "timeWindowInMinutes": 180
                },
                "action": {
                    "severity": "1",
                    "aznsAction": {
                        "actionGroup": [
                            "[variables('actionGroupResource')]"
                        ]
                    },
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 0
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        },
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",
            "name": "[concat(parameters('projectAppName'),'-certificate-ok')]",
            "location": "westeurope",
            "dependsOn": [
                "[variables('actionGroupResource')]"
            ],
            "properties": {
                "description": "Certificate for WebApp is OK (daily checks)",
                "enabled": "true",
                "source": {
                    "query": "[concat( 'AzureDiagnostics | where ResultDescription contains \"Test-WebAppCertificate: SSL certificate is OK! WebApp: ', parameters('webAppName'), '\"')]",
                    "authorizedResources": [],
                    "dataSourceId": "[variables('logAnalyticsResource')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 15,
                    "timeWindowInMinutes": 15
                },
                "action": {
                    "severity": "2",
                    "aznsAction": {
                        "actionGroup": [
                            "[variables('actionGroupResource')]"
                        ]
                    },
                    "throttlingInMin": 60,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 0
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        },
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",
            "name": "[concat(parameters('projectAppName'),'-certificate-updated')]",
            "location": "westeurope",
            "dependsOn": [
                "[variables('actionGroupResource')]"
            ],
            "properties": {
                "description": "Certificate has been updated for WebApp",
                "enabled": "true",
                "source": { 
                    "query": "[concat( 'AzureDiagnostics | where ResultDescription contains \"Set-AppServiceCertificate: new certificate has been installed for WebApp: ', parameters('webAppName'), '\"')]",
                    "authorizedResources": [],
                    "dataSourceId": "[variables('logAnalyticsResource')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 180,
                    "timeWindowInMinutes": 180
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                            "[variables('actionGroupResource')]"
                        ]
                    },
                    "throttlingInMin": 50,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 0
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        },
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",
            "name": "[concat(parameters('projectAppName'),'-certificate-does-not-require-update')]",
            "location": "westeurope",
            "dependsOn": [
                "[variables('actionGroupResource')]"
            ],
            "properties": {
                "description": "Certificate for WebApp doesn't requre updating!",
                "enabled": "true",
                "source": {
                    "query": "[concat( 'AzureDiagnostics | where ResultDescription contains \"Update-ACMECertificate: certificate update is not needed for WebApp: ', parameters('webAppName'), '\"')]",
                    "authorizedResources": [],
                    "dataSourceId": "[variables('logAnalyticsResource')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 15,
                    "timeWindowInMinutes": 15
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                            "[variables('actionGroupResource')]"
                        ]
                    },
                    "throttlingInMin": 50,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 0
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        },
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",
            "name": "[concat(parameters('projectAppName'),'-errors-in-the-certificate-updating')]",
            "location": "westeurope",
            "dependsOn": [
                "[variables('actionGroupResource')]"
            ],
            "properties": {
                "description": "There are errors found during the certificate update for WebApp",
                "enabled": "true",
                "source": {
                    "query": "AzureDiagnostics | where StreamType_s == \"Error\"",
                    "authorizedResources": [],
                    "dataSourceId": "[variables('logAnalyticsResource')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 60,
                    "timeWindowInMinutes": 60
                },
                "action": {
                    "severity": "1",
                    "aznsAction": {
                        "actionGroup": [
                            "[variables('actionGroupResource')]"
                        ]
                    },
                    "throttlingInMin": 50,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 0
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        }
    ]
}